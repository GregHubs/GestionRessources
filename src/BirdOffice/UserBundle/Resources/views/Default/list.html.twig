    <table class="table table-striped table-bordered text-center">
        <tr class="head-table">
            {# sorting of properties based on query components #}
            <th class="text-center">Id</th>
            <th class="text-center">Username</th>
            <th class="text-center">Email</th>
            <th class="text-center" width="100">Actions</th>
        </tr>
        {# table body #}
        {% for user in users %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td class="text-center">{{ user.id }}</td>
                <td class="text-center">{{ user.username }}</td>
                <td class="text-center">{{ user.email }}</td>
                <td class="actions text-center">
                    <a class="text-danger"  href="{{ path('delete_user', { 'id':user.id }) }}">
                        <i class="fa fa-trash-o icon-size" data-toggle="modal"  data-target="#myModal4"></i>
                    </a>
                    <i class="fa fa-edit icon-size"></i>
                    <a class="text-default" href=""><i class="fa fa-search icon-size bouton">
                            <div class="info-bulle">
                                <p>Décembre : </p>
                                <ul>
                                    <li>Jours d'absence : 5</li>
                                    <li>Jours de présence : 15</li>
                                </ul>
                            </div>
                        </i></a>

                </td>
            </tr>
        {% endfor %}
    </table>
    <!-- Generated markup by the plugin -->
    <div class="tooltip top" role="tooltip">
        <div class="tooltip-arrow"></div>
        <div class="tooltip-inner">
            Some tooltip text!
        </div>
    </div>
    <div class="modal fade" id="myModal4" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header alert">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Détails de la demande</h4>
                </div>
                <div class="modal-body">
                    Etes-vous sûr de vouloir supprimer ce collaborateur ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Supprimer</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                </div>
            </div>
        </div>
    </div>

