<table class="table table-striped table-bordered text-center">
    <tr class="head-table">
        <th class="text-center none-mobile">Jour</th>
        <th class="text-center none-mobile">Durée</th>
        <th class="text-center none-mobile">Type</th>
        <th class="text-center none-mobile">Description</th>
        <th class="text-center">Détails</th>
        <th class="text-center" width="100">Actions</th>
        <th class="text-center" width="100">Validation</th>
    </tr>
    {% for day in days %}
    <tr>
        <td class="text-center none-mobile">{{ day.startDate|date("d/m/Y") }}</td>
        <td class="text-center none-mobile">{{ day.hours }} heures</td>
        <td class="text-center none-mobile">Absence : {{ day.absenceType.name|default('') }}</td>
        <td class="text-center none-mobile">{{ day.description|default('') }}</td>
        <td class="text-center">
            <button type="button" data-day="{{ day.id }}" class="btn btn-primary detail-day" data-toggle="modal" data-target="#myModal">
                En savoir plus
            </button>
        </td>
        <td class="actions text-center">
            <a class="text-danger" href=""><i class="fa fa-trash-o icon-size"></i></a>
            <a class="text-default" href=""><i class="fa fa-edit icon-size"></i></a>
            <a class="text-default none-mobile" href="">
                <i class="fa fa-search icon-size bouton">
                    <div class="info-bulle">
                        <p class="center"><strong>Récapitulatif sur Décembre : </strong></p>
                        <ul>
                            <li>Jours d'absence : 5</li>
                            <li>Jours de présence : 15</li>
                        </ul>
                    </div>
                </i>
            </a>
        </td>
        <td class="text-center">
            <p>
            <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-id-switch-indeterminate bootstrap-switch-animate bootstrap-switch-off bootstrap-switch-indeterminate" style="width: 102px;">
                <div class="bootstrap-switch-container" style="width: 150px; margin-left: -25px;">
                    <span class="bootstrap-switch-handle-on bootstrap-switch-primary" style="width: 50px;">ON</span>
                    <span class="bootstrap-switch-label" style="width: 50px;">&nbsp;</span><span class="bootstrap-switch-handle-off bootstrap-switch-default" style="width: 50px;">OFF</span>
                    <input id="switch-indeterminate" type="checkbox" name="switch-indeterminate" checked="" data-indeterminate="true">
                </div>

            </div>
            </p>
        </td>
    </tr>
    {% endfor %}
</table>
