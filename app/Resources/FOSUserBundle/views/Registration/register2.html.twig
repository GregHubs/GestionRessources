{% extends "FOSUserBundle::layout.html.twig" %}

{% block navbar %}
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-5" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand text-center" href="/">Etape 2/2 - Vous avez maintenant la possibilité de noter les films que vous souhaitez</a>
            </div>
        </div>
    </nav>
{% endblock %}


{% block body %}
<div class="tools actu-body index-action">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1">
            <!-- Primary table -->
            <div class="table-primary">
                <div class="table-header">
                </div>

                <table class="table table-bordered table-liste">
                    <thead>
                    <tr>
                        <th class="text-center"
                            width="40">{{ knp_pagination_sortable(pagination, '#', 'm.id') }}</th>
                        <th class="text-center"
                            width="40">{{ knp_pagination_sortable(pagination, 'Titre', 'm.title') }}</th>
                        <th class="text-center"
                            width="40">{{ knp_pagination_sortable(pagination, 'Réalisateur', 'm.director') }}</th>
                        <th class="text-center"
                            width="40">{{ knp_pagination_sortable(pagination, 'Année', 'm.year') }}</th>
                        <th class="text-center"
                            width="40">{{ knp_pagination_sortable(pagination, 'Noter', 'm.rate') }}</th>
                    </thead>
                    <tbody>
                    {% for movie in pagination %}
                        <tr {% if loop.index is odd %}class="color"{% endif %}>
                            <td class="text-center">{{ movie.id }}</td>
                            <td class="text-center">{{ movie.title }}</td>
                            <td class="text-center">{{ movie.director }}</td>
                            <td class="text-center">{{ movie.year }}</td>
                            <td class="text-center">{% include 'DCSRatingBundle:Rating:control.html.twig' with {'id' : movie.id } %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <div class="well center-block" style="max-width: 400px;">
        <a href="{{ path('movie_homepage') }}"><button type="button" class="btn btn-primary btn-lg btn-block">Terminer</button></a>
    </div>

{% endblock %}