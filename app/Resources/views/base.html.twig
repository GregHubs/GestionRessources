<!DOCTYPE html>
<!--[if IE 8]>
<html class="ie8"> <![endif]-->
<!--[if IE 9]>
<html class="ie9 gt-ie8"> <![endif]-->
<!--[if gt IE 9]><!-->
<html class="gt-ie8 gt-ie9 not-ie"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block title %}Bird Office{% endblock %}</title>
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="Bird Office, outil de gestion interne du personnel" />
    <!-- Open Sans font from Google CDN -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300&amp;subset=latin"
          rel="stylesheet" type="text/css">

    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>

    {% block stylesheets %}
        <link href="{{ asset('bundles/user/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/user/css/styles.css') }}" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    {% endblock %}

    {% stylesheets  output="css/style.css"
    '@UserBundle/Resources/less/class.less'
    '@UserBundle/Resources/less/styles.less'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

    {% block javascripts %}
        <script src="{{ asset('bundles/user/js/jquery.js') }}"></script>
        <script src="{{ asset('bundles/user/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('bundles/user/js/notify.min.js') }}"></script>
        <script src="{{ asset('bundles/user/js/main.js') }}"></script>
        <script src="{{ asset('bundles/user/js/bootstrap-datepicker.js') }}"></script>
    {% endblock %}

    {% javascripts output='js/app.js'
        'bundles/user/js/jquery.js'
        'bundles/user/js/bootstrap.min.js'
        'bundles/user/js/notify.min.js'
        'bundles/user/js/main.js'
        'bundles/user/js/bootstrap-datepicker.js'
    %}

    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <nav class="navbar">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="/">
                                {% image '@UserBundle/Resources/public/images/logo.png' %}
                                <img src="{{ asset_url }}" alt="Bird Office Logo"  />
                                {% endimage %}
                            </a>
                        </div>
                    </nav>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        {% if app.request.attributes.get('_route') != 'fos_user_security_login' %}
        {% if app.request.attributes.get('_route') != 'Callback' %}
        <div class="row">
            <div class="col-md-12 no-marge">
                <div class="full">
                    {% image '@UserBundle/Resources/public/images/visuel-web.png' %}
                        <img src="{{ asset_url }}" alt="Outil de gestion de planning" class="center block margin15 visuel"/>
                    {% endimage %}
                </div>
            </div>
        </div>
        {% endif %}
        {% endif %}
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <!-- Modal -->
                <div id="modal" class="modal fade" tabindex="-1" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 id="modal-title" class="modal-title"></h4>
                            </div>
                            <div id="modal-body" class="modal-body">
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
            {% block body %}{% endblock %}
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
</body>
</html>
